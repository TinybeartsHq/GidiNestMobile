{
  "expo": {
    "name": "GidiNest",
    "slug": "gidi-nest-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/background/2149836836.jpg",
      "resizeMode": "cover",
      "backgroundColor": "#6b146d"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gidinest.app",
      "infoPlist": {
        "NSFaceIDUsageDescription": "GidiNest uses Face ID to provide secure and convenient authentication for your account."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6b146d"
      },
      "package": "com.gidinest.app",
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      "expo-font",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "GidiNest uses Face ID to provide secure and convenient authentication for your account.",
          "NSFaceIDUsageDescription": "GidiNest uses Face ID to provide secure and convenient authentication for your account."
        }
      ]
    ],
    "extra": {
      "apiBaseUrl": "https://your-api-url.com/api/v1/"
    }
  }
}
